  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1) inset, 0 0 8px rgba(82, 168, 236, 0.6);
  outline: 0 none;
  position: relative;
  z-index: 2;
}

.field_with_errors > input {
  border-color: rgba(226, 119, 90, 0.6);
  outline: 0 none;
  position: relative;
