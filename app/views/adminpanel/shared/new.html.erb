<% provide(:page_title, t("action.create", resource: @model.display_name.capitalize)) -%>
<% breadcrumb_add(
  @model.display_name.capitalize.pluralize(I18n.default_locale),
  {
    controller: params[:controller],
    action: "index"
  }
) %>
<div class = "row-fluid">
  <div class = "widget widget-padding span12">
    <div class = "widget-header">
      <i class = "fa fa-<%= @model.icon -%>"></i>
      <h5><%= t("action.create", resource: @model.display_name) %></h5>
    </div>
    <%= adminpanel_form_for(
      @resource_instance,
      html: {
        class: 'form-horizontal',
        id: 'new_resource'
      }
    ) do |f| -%>
      <div class = "widget-body">
        <div class = "widget-forms clearfix">
          <%= render 'adminpanel/shared/error_messages', object: @resource_instance %>
          <%= render 'adminpanel/shared/form_fields', f: f %>
        </div>
      </div>
      <div class = "widget-footer">
        <%=
        f.submit(
          t('action.add', resource: @model.display_name),
          data: {
            disable_with: t("action.submitting")
          },
          id: "new-#{@model.name.demodulize}-button"
        ) %>
      </div>
    <% end -%>
  </div>
</div>
<%= render 'adminpanel/shared/modal' %>
