<div class="row-fluid">
  <%=
    link_to(
      content_tag(:div,
        content_tag(
          :i,
          nil,
          :class => 'icon-plus-sign icon-2x') +
          content_tag(
            :span,
            I18n.t("action.create") + " #{@model.display_name} para #{model}",
            nil
          ),
          :class => "btn btn-box span2"),
      {
        :controller => params[:controller],
        :action => "new",
        :"model" => model,
        :currentcontroller => params[:controller]
      },
      :"data-target" => '#new-category',
      :"data-toggle" => 'modal',
      :remote => true
    )
  %>
</div>

<br/>

<table id="<%= model %>-table" class="table table-striped table-bordered">
  <tr>
   <th><%= t("category.name") %></th>
   <th><%= t("actions") %></th>
  </tr>
  <% categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category_path(category) %></td>
      <td>
        <%= render 'shared/pencil_edit_button', resource: category, resource_name: @model.display_name %>

        <%= link_to content_tag(:i, nil, :class => 'icon-remove'),
          [category],
          :title => "Editar",
          :method => :delete,
          :data => { :confirm => "Eliminar #{category.name}?"} %>
      </td>
    </tr>
  <% end %>

</table>
