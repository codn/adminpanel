<% if @model.has_route?(:edit) && can?(:update, @model) %>
  <% if !defined?(path) %>
    <!-- if defined it's a call from gallery sort -->
    <% path = [:move_to_better, member] %>
  <% end %>
  <%= link_to(
    content_tag(
      :i,
      nil,
      class: 'fa fa-chevron-up'
    ),
    path,
    title: I18n.t('action.move_to_better', resource: member.name),
    method: :put,
    remote: true
  ) %>
<% end %>
