<% if @model.has_route?(:destroy) && can?(:destroy, @model) %>
  <%=
    link_to(
      content_tag(
        :i,
        nil,
        class: 'fa fa-trash-o'
      ),
      [resource],
      title: 'Eliminar',
      id: 'resource-delete',
      method: :delete,
      data: {
        confirm: "Eliminar #{resource.name}?"
      }
    )
  %>
<% end %>
