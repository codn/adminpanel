<% if @model.has_route?(:edit) && can?(:update, @model) %>
  <%=
    link_to(
      content_tag(
        :i,
        nil,
        :class => 'fa fa-pencil'
      ),
      [:edit, resource],
      :title => t("action.update") + " #{resource.name}",
      data: { no_turbolink: true }
    )
  %>
<% end %>
